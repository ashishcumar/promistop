{
  "name": "promistop",
  "version": "1.0.1",
  "description": "Promistop is a lightweight utility that adds cancellation support to any async function. It extends promises with `.cancel()` and `.isCancelled()` methods, optionally using AbortController. Ideal for JavaScript apps using async operations like fetch, timeouts, or background tasks.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashishcumar/promistop.git"
  },
  "keywords": [
    "JavaScript",
    "Promises",
    "Cancelable Promise",
    "AbortController",
    "Async utilities",
    "React",
    "Fetch cancel",
    "Promise cancellation",
    "Abortable tasks",
    "Cancellable tasks"
  ],
  "homepage": "https://github.com/ashishcumar/promistop",
  "author": "Ashish",
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
